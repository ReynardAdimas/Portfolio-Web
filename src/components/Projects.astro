    ---
    const projects = [
    { title: "Project One", category: "UI/UX Design", bg: "bg-gray-400" }, 
    { title: "Project Two", category: "SaaS Platform", bg: "bg-slate-500" },
    { title: "Project Three", category: "Mobile App", bg: "bg-zinc-800" },
    { title: "Project Four", category: "Branding", bg: "bg-stone-500" },
    { title: "Project Five", category: "Editorial", bg: "bg-neutral-400" },
    { title: "Project Six", category: "Website", bg: "bg-gray-900" },
    ];
    ---

    <section id="project" class="py-24 bg-[#F9F9F9]">
        <div class="container mx-auto px-6 max-w-6xl">
            <h2 class="text-4xl font-bold mb-2 text-black">My Projects</h2>
            <p class="text-gray-500 mb-12">A collection of projects focused on minimalist design.</p>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {projects.map((project) => (
                    <div class={`group relative h-80 rounded-xl overflow-hidden cursor-pointer ${project.bg}`}>
                        <div class="absolute bottom-0 left-0 w-full p-6 bg-linear-to-t from-black/80 to-transparent">
                            <h3 class="text-white text-xl font-bold">{project.title}</h3>
                            <p class="text-gray-300 text-sm">{project.category}</p>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>