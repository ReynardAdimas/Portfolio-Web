---
const contactOptions = [
    {
        icon: "linkedin",
        title: "LinkedIn",
        desc: "View Professional Profile",
        href: "https://www.linkedin.com/in/reynard-adimas-nabil-5b2b6a260/",
        color: "text-blue-400" 
    },
    {
        icon: "github",
        title: "GitHub",
        desc: "Explore My Projects",
        href: "https://github.com/ReynardAdimas",
        color: "text-gray-100"
    },  
    {
        icon: "email",
        title: "Email",
        desc: "Send Me a Message",
        href: "mailto:reynardadimas@gmail.com", 
        color: "text-white"
    }
];
---

<section id="contact" class="py-24 bg-[#0B0E14] text-white">
    <div class="container mx-auto px-6 max-w-6xl">
        <div class="text-center mb-16">
            <h2 class="text-5xl font-bold mb-4">Connect with Me</h2>
            <p class="text-gray-400 max-w-xl mx-auto">
                I'm always open to new opportunities and collaborations. Feel free to connect or drop me a line!
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {contactOptions.map((opt) => (
                <a 
                    href={opt.href} 
                    target="_blank" 
                    rel="noopener noreferrer" 
                    class="group bg-[#161A23] p-6 rounded-xl border border-gray-800 hover:border-gray-600 transition-all duration-300 hover:-translate-y-1"
                >
                    <div class="flex items-center gap-4">
                        {/* Icon Container */}
                        <div class="w-12 h-12 flex items-center justify-center bg-[#252A36] rounded-lg group-hover:scale-110 transition-transform duration-300">
                            {opt.icon === "linkedin" && (
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>
                            )}
                            {opt.icon === "github" && (
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
                            )}
                            {opt.icon === "twitter" && (
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white"><path d="M4 4l11.733 16h4.267l-11.733 -16z"/><path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772"/></svg>
                            )}
                            {opt.icon === "dribbble" && (
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white"><circle cx="12" cy="12" r="10"/><path d="M19.13 5.09C15.22 9.14 10 10.44 2.25 10.94"/><path d="M21.75 12.84c-6.62-1.41-12.14 1-16.38 6.32"/><path d="M15.2 6.69a16.85 16.85 0 0 1 2.22 13.78"/></svg>
                            )}
                            {opt.icon === "instagram" && (
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg>
                            )}
                            {opt.icon === "email" && (
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
                            )}
                        </div>
                        
                        {/* Text Content */}
                        <div>
                            <h3 class="text-lg font-bold text-white group-hover:text-blue-200 transition-colors">{opt.title}</h3>
                            <p class="text-gray-400 text-sm">{opt.desc}</p>
                        </div>
                    </div>
                </a>
            ))}
        </div>

        {/* Footer Area */}
        <div class="mt-20 pt-8 border-t border-gray-800 flex flex-col md:flex-row justify-between items-center text-sm text-gray-500">
            <p>&copy; 2026 Reynard Adimas N. All Rights Reserved.</p>
            <div class="space-x-6 mt-4 md:mt-0">
                <a href="/" class="hover:text-white transition-colors">Home</a>
                <a href="#project" class="hover:text-white transition-colors">Projects</a>
                <a href="#about" class="hover:text-white transition-colors">About</a>
            </div>
        </div>
    </div>
</section>