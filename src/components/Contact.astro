<section id="contact" class="py-24 bg-[#0B0E14] text-white">
    <div class="container mx-auto px-6 max-w-3xl text-center">
        <h2 class="text-5xl font-bold mb-4">Get in Touch</h2>
        <p class="text-gray-400 mb-12">Feel free to reach out for collaborations or just a friendly hello!</p>

        <form class="text-left space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block mb-2 text-sm font-medium">Name</label>
                    <input type="text" placeholder="Enter your name" class="w-full bg-[#161A23] border border-gray-700 rounded-lg p-3 focus:border-white outline-none transition" />
                </div>
                <div>
                    <label class="block mb-2 text-sm font-medium">Email</label>
                    <input type="email" placeholder="Enter your email" class="w-full bg-[#161A23] border border-gray-700 rounded-lg p-3 focus:border-white outline-none transition" />
                </div>
            </div>
            
            <div>
                <label class="block mb-2 text-sm font-medium">Subject</label>
                <input type="text" placeholder="What is this about?" class="w-full bg-[#161A23] border border-gray-700 rounded-lg p-3 focus:border-white outline-none transition" />
            </div>

            <div>
                <label class="block mb-2 text-sm font-medium">Message</label>
                <textarea rows="5" placeholder="Your message..." class="w-full bg-[#161A23] border border-gray-700 rounded-lg p-3 focus:border-white outline-none transition"></textarea>
            </div>

            <div class="text-right">
                <button type="submit" class="bg-white text-black font-bold py-3 px-8 rounded-lg hover:bg-gray-200 transition">
                    Send Message
                </button>
            </div>
        </form>

        <div class="mt-20 pt-8 border-t border-gray-800 flex justify-between text-sm text-gray-500">
            <p>&copy; 2024 Nama Kamu. All Rights Reserved.</p>
            <div class="space-x-4">
                <a href="#" class="hover:text-white">LinkedIn</a>
                <a href="#" class="hover:text-white">GitHub</a>
            </div>
        </div>
    </div>
</section>